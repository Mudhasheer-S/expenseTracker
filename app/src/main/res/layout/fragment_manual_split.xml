<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Enter Amount for Each Friend"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/layoutFriendInputs"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRemainingManual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining: â‚¹0"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etNoteManual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter note (optional)"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnConfirmSplit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Split"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
