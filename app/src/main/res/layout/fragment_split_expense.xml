<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="Select Friends to Split With"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ListView
            android:id="@+id/listFriends"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:dividerHeight="8dp" />

        <RadioGroup
            android:id="@+id/rgSplitType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rbEqual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Split Equally"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbCustom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Split Manually"
                android:layout_marginStart="16dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/etSplitNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter note (optional)"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnProceedSplit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed to Split"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
